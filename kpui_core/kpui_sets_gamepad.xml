<GuiXml>
    <Controls>
        <TopLevelControl name="Kela_Sets" inherits="ZO_Gamepad_ParametricList_Screen">
            <OnInitialized>
                Kela_Sets_OnInitialize(self)
            </OnInitialized>
        </TopLevelControl>

        <Control name="Kela_Sets_Row_Gamepad" inherits="ZO_GamepadInteractiveSortFilterListRow" virtual="true">
            <OnInitialized>
                self.nameLabel = self:GetNamedChild("Name")
                self.itemtypeLabel = self:GetNamedChild("ItemType")
                self.sourceLabel = self:GetNamedChild("Source")
            </OnInitialized>
            
            <Controls>
                <Label name="$(parent)Name" inherits="ZO_GamepadInteractiveSortFilterListRowLabel">
                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_NAME_WIDTH" />
                    <Anchor point="LEFT" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                </Label>
                <Label name="$(parent)ItemType" inherits="ZO_GamepadInteractiveSortFilterListRowLabel" verticalAlignment="CENTER">
                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_ITEMTYPE_WIDTH" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Name" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                </Label>
                <Label name="$(parent)Source" inherits="ZO_GamepadInteractiveSortFilterListRowLabel" verticalAlignment="CENTER">
                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_SOURCE_WIDTH" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)ItemType" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                </Label>

<!--                 <Label name="$(parent)ItemType" inherits="ZO_GamepadInteractiveSortFilterListRowLabel" verticalAlignment="CENTER">
                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_ITEMTYPE_WIDTH" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Name" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_LIST_HEADER_DOUBLE_PADDING_X" />
                </Label>

                <Label name="$(parent)Source" inherits="ZO_GamepadInteractiveSortFilterListRowLabel" verticalAlignment="CENTER">
                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_SOURCE_WIDTH" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)ItemType" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_LIST_HEADER_DOUBLE_PADDING_X" />
                </Label> -->

            </Controls>
        </Control>


        <TopLevelControl name="Kela_Sets_List_Gamepad" inherits="ZO_GamepadGrid_NavQuadrant_2_3_4_Anchors ZO_GamepadInteractiveSortFilterListControl" hidden="true">
            <OnInitialized>
                Kela_Sets_List_OnInitialize(self)
            </OnInitialized>
            <Controls>
                <Control name="$(parent)Container" override="true">
                    <Controls>
                        <Control name="$(parent)Headers" override="true">
                            <Controls>
                                <Control name="$(parent)Name" inherits="ZO_GamepadInteractiveFilterHeader">
                                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_NAME_WIDTH" />
                                    <Anchor point="TOPLEFT" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                                    <OnInitialized>
                                        ZO_GamepadInteractiveSortFilterHeader_Initialize(self, "Name", "name", TEXT_ALIGN_LEFT)
                                    </OnInitialized>
                                </Control>

                                <Control name="$(parent)ItemType" inherits="ZO_GamepadInteractiveFilterHeader">
                                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_ITEMTYPE_WIDTH" />
                                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Name" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                                    <OnInitialized>
                                        ZO_GamepadInteractiveSortFilterHeader_Initialize(self, "ItemType", "itemType", TEXT_ALIGN_LEFT)
                                    </OnInitialized>
                                </Control>

                                <Control name="$(parent)Source" inherits="ZO_GamepadInteractiveFilterHeader">
                                    <Dimensions x="KELA_GAMEPAD_SETS_LIST_SOURCE_WIDTH" />
                                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)ItemType" offsetX="ZO_GAMEPAD_INTERACTIVE_FILTER_HIGHLIGHT_PADDING" />
                                    <OnInitialized>
                                        ZO_GamepadInteractiveSortFilterHeader_Initialize(self, "Source", "source", TEXT_ALIGN_LEFT)
                                    </OnInitialized>
                                </Control>

                            </Controls>
                        </Control>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>




    </Controls>
</GuiXml>